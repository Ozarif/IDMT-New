@{
	ViewData["Title"] = "Support Groups Page";
}

<link href="~/css/msf.css" rel="stylesheet" />
<div class="p-4">
	<div class="card border-0 ">
		<div class="card-header bg-primary bg-gradient">
			<div class="row">
				<div class="text-start text-white">
					<h4 class=""><i class="bi bi-people-fill h4"></i> Support Groups</h4>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<div class="row pb-3">
				<div>
					<a asp-controller="SupportGroups" asp-action="Create" class="btn btn-info">
						<i class="bi bi-plus-circle"></i> Create New Support Group
					</a>
				</div>
			</div>
			<div class="row">
				<table id="tblData" class="table table-bordered table-striped">
					<thead class="table-info">
						<tr>
							<th>Name</th>
							<th>Email</th>
							<th>Is Deleted</th>
							<th></th>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	<script src="~/js/supportGroups.js" asp-append-version="true"></script>
}