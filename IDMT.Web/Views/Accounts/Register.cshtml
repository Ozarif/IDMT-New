@model RegisterUserVM
@{
    ViewData["Title"] = "User Registration Page";
}
<div class="container pt-5">
    <div class="card shadow border ">
        <div class="card-header bg-dark bg-gradient">
            <div class="row">
                <div class="col-12 text-start text-white">
                    <i class="bi bi-person-add h4"></i> User Registration
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pt-3">
                <div class="col-md-12">
                    <form class="row" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-3 col-md-3">
                            <input asp-for="UserName" class="form-control" placeholder="User Login Name" aria-required="true" />
                            <label asp-for="UserName" class="ms-2 text-muted"></label>
                            <span asp-validation-for="UserName" class="text-danger" />
                        </div>
                        <div class="form-floating mb-3 col-md-9">
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                            <label asp-for="FirstName" class="ms-2 text-muted"></label>
                            <span asp-validation-for="FirstName" class="text-danger" />
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                            <label asp-for="LastName" class="ms-2 text-muted"></label>
                            <span asp-validation-for="LastName" class="text-danger" />
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <label asp-for="Password" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                        <div class="form-floating mb-3 col-md-6">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <label asp-for="ConfirmPassword" class="ms-2 text-muted"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger" />
                        </div>

                        <div class="form-floating mb-3 col-md-12">
                            <select asp-for="Role" asp-items="@Model.RoleList" class="form-select">
                                <option>-Select Role-</option>
                            </select>
                            <label asp-for="Role" class="ms-2"></label>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="form-floating d-grid gap-2 d-md-block pt-2 col-12">
                            <button type="submit" value="Create" class="btn btn-info shadow">
                                <i class="bi bi-pencil-square"></i> Register
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary shadow ">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
