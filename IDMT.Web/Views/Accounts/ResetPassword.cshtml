@model ResetPasswordVM
<div class="d-flex align-items-center justify-content-center" style="height: 700px;">
	<div class="card shadow border w-25">
		<div class="card-header bg-secondary bg-gradient">
			<div class="row">
				<div class="text-start text-white">
					<i class="bi bi-shield-slash-fill h4"></i> Reset Password
				</div>
			</div>
		</div>
		<div class="card-body border">
			<form method="post" class="row">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="">
					<div class="form-floating py-1 ">
						<input asp-for="Password" class="form-control border shadow" placeholder="Password" />
						<label asp-for="Password" class="ms-2"></label>
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="form-floating py-1 ">
						<input asp-for="ConfirmPassword" class="form-control border shadow" placeholder="Confirm Password" />
						<label asp-for="ConfirmPassword" class="ms-2"></label>
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
					<input type="hidden" asp-for="Email" class="form-control" />
					<input type="hidden" asp-for="Token" class="form-control" />
					<div class="form-floating d-grid gap-2 d-md-block pt-2">
						<button type="submit" value="Create" class="btn btn-info" >
							<i class="bi bi-check-circle"></i> Save
							</button>
						<a asp-controller="Home" asp-action="Index" class="btn btn-secondary shadow ">
							<i class="bi bi-x-circle"></i> Cancel
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}