@model LoginVM
@{
	ViewData["Title"] = "Login Page";
}

<div class="d-flex align-items-center justify-content-center" style="height: 700px;">
	<div class="card shadow w-25">
		<div class="card-header bg-dark bg-gradient">
			<div class="row">
				<div class="text-start text-white">
					<i class="bi bi-arrow-right-square"></i> Sign in
				</div>
			</div>
		</div>
		<div class="card-body ">
			<form method="post" class="row">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="">
					<div class="form-floating py-1 ">
						<input asp-for="UserName" class="form-control shadow" placeholder="User Login Name" autocomplete="off"/>
						<label asp-for="UserName" class="ms-2"></label>
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>
					<div class="form-floating py-1 ">
						<input asp-for="Password" class="form-control shadow" placeholder="Password" />
						<label asp-for="Password" class="ms-2"></label>
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="row pt-3">
						<div class="d-grid">
							<button type="submit" class="btn btn-info btn-block shadow">Login &nbsp;<i class="bi bi-box-arrow-in-right" aria-hidden="true"></i></button>
						</div>
					</div>

				</div>
			</form>
		</div>
		<div class="card-footer bg-light bg-gradient">
			<div class="row">
				<div class="d-flex justify-content-center">

					<a asp-controller="Accounts" asp-action="ForgotPassword" class="btn btn-outline- btn-sm fst-italic">Forgot your password?</a>
			
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}


