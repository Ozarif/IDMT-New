@model ChangePasswordVM

@{
	ViewData["Title"] = "Change Password Page";
}

<div class="d-flex align-items-center justify-content-center" style="height: 700px;">
	<div class="card shadow border w-25">
		<div class="card-header bg-dark bg-gradient">
			<div class="row">
				<div class="text-start text-white">
					<i class="bi bi-shield-slash-fill h4"></i> Change Password
				</div>
			</div>
		</div>
		<div class="card-body border">
			<form method="post" class="row">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="">
					<div class="form-floating py-1 ">
						<input asp-for="CurrentPassword" class="form-control border shadow" placeholder="Current Password" />
						<label asp-for="CurrentPassword" class="ms-2"></label>
						<span asp-validation-for="CurrentPassword" class="text-danger"></span>
					</div>
					<div class="form-floating py-1 ">
						<input asp-for="NewPassword" class="form-control border shadow" placeholder="Password" />
						<label asp-for="NewPassword" class="ms-2"></label>
						<span asp-validation-for="NewPassword" class="text-danger"></span>
					</div>
					<div class="form-floating py-1 ">
						<input asp-for="ConfirmNewPassword" class="form-control border shadow" placeholder="Confirm Password" />
						<label asp-for="ConfirmNewPassword" class="ms-2"></label>
						<span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
					</div>
					<input type="hidden" asp-for="UserName" class="form-control" />
					<div class="form-floating d-grid gap-2 d-md-block pt-2">
						<button type="submit" class="btn btn-info shadow">
							<i class="bi bi-check-circle"></i> Change
						</button>
						<a asp-controller="Home" asp-action="Index" class="btn btn-secondary shadow ">
							<i class="bi bi-x-circle"></i> Cancel
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}